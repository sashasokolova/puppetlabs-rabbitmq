[default]
<% if @ssl && @management_ssl -%>
ssl = True
port = <%= @ssl_management_port %>
<% else -%>
port = <%= @management_port %>
<% end -%>
<% if @management_hostname -%>
hostname = <%= @management_hostname %>
<% end -%>
<% if @ssl_cacert -%>
ssl_ca_cert_file = <%= @ssl_cacert %>
<% end -%>
<% if @ssl_cert -%>
ssl_cert_file = <%= @ssl_cert %>
<% end -%>
<% if @ssl_key -%>
ssl_key_file = <%= @ssl_key %>
<% end -%>